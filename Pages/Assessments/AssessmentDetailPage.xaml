<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="C971.Pages.Assessments.AssessmentDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Assessment Detail">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnEditClicked" />
        <ToolbarItem Text="Delete"
                     Order="Primary"
                     Priority="1"
                     Clicked="OnDeleteClicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="8">

                <Label Text="{Binding Name}"
                       FontSize="24"
                       FontAttributes="Bold" />

                <Label Text="{Binding Type}"
                       FontSize="14"
                       TextColor="Gray" />

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Start: " />
                            <Span Text="{Binding StartDate, StringFormat='{0:d}'}" />
                            <Span Text="   â€¢   Due: " />
                            <Span Text="{Binding DueDate, StringFormat='{0:d}'}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <StackLayout Orientation="Horizontal" Spacing="24" Margin="0,12,0,0">
                    <StackLayout>
                        <Label Text="Notify on start" />
                        <Switch IsToggled="{Binding NotifyOnStart}"
                                IsEnabled="False" />
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Notify on end" />
                        <Switch IsToggled="{Binding NotifyOnEnd}"
                                IsEnabled="False" />
                    </StackLayout>
                </StackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
