<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="C971.Pages.Terms.AddEditTermPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding PageTitle}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Term Title" FontAttributes="Bold" />
            <Entry Placeholder="Enter term title"
                   Text="{Binding Term.Title}" />

            <Label Text="Start Date" FontAttributes="Bold" />
            <DatePicker Date="{Binding Term.StartDate}" />

            <Label Text="End Date" FontAttributes="Bold" />
            <DatePicker Date="{Binding Term.EndDate}" />

            <Label Text="Status" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding AvailableStatuses}"
                    SelectedItem="{Binding Term.Status}" />

            <Button Text="Save"
                    Command="{Binding SaveCommand}" />

            <Button Text="Cancel"
                    Command="{Binding CancelCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
