<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="C971.Pages.Terms.TermDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace=C971.Models"
    Title="Term Details">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- Term Title -->
            <Label Text="{Binding Title}"
                   FontSize="24"
                   FontAttributes="Bold" />

            <!-- Term summary (read-only) -->
            <Frame Padding="12"
                   HasShadow="True"
                   CornerRadius="8">
                <Grid ColumnDefinitions="Auto,*"
                      RowDefinitions="Auto,Auto,Auto">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Start Date:"
                           FontAttributes="Bold" />
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding StartDate,
                                          StringFormat='{0:MM/dd/yyyy}'}" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="End Date:"
                           FontAttributes="Bold" />
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding EndDate,
                                          StringFormat='{0:MM/dd/yyyy}'}" />

                    <Label Grid.Row="2" Grid.Column="0"
                           Text="Status:"
                           FontAttributes="Bold" />
                    <Label Grid.Row="2" Grid.Column="1"
                           Text="{Binding Status}" />
                </Grid>
            </Frame>

            <!-- Courses header / C2 starter -->
            <Label Text="Courses in this Term"
                   FontSize="18"
                   FontAttributes="Bold" />

            <!-- Placeholder for future course list -->
            <Frame Padding="12"
                   CornerRadius="8"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Course list coming soon."
                           Opacity="0.6"
                           FontAttributes="Italic" />

                    <!-- Navigation starter for later course pages -->
                    <Button Text="Manage Courses"
                            HorizontalOptions="End"
                            Clicked="OnManageCoursesClicked" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
