<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="C971.Pages.Terms.TermDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Term Details">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit"
                     Clicked="OnEditTermClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Title" FontAttributes="Bold" />
            <Label Text="{Binding Title}" />

            <Label Text="Start Date" FontAttributes="Bold" />
            <Label Text="{Binding StartDate, StringFormat='{}{0:MM/dd/yyyy}'}" />

            <Label Text="End Date" FontAttributes="Bold" />
            <Label Text="{Binding EndDate, StringFormat='{}{0:MM/dd/yyyy}'}" />

            <Label Text="Status" FontAttributes="Bold" />
            <Label Text="{Binding Status}" />

            <Button Text="Manage Courses"
                    Clicked="OnManageCoursesClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
